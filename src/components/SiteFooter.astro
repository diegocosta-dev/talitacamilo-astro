---
const social = [
  { label: "Facebook", url: "https://www.facebook.com/TalitaCamiloProfessionalServices/" },
  { label: "Linkedin", url: "https://www.linkedin.com/company/talita-camilo-professional-services/" },
  { label: "Instagram", url: "https://www.instagram.com/tcproservices/" },
  { label: "Alignable", url: "https://www.alignable.com/barnstable-ma/talita-camilo-professional-services-2" },
]

const addresses = [
  { city: "Hyannis", province: null, street: "100 West Main Street, Unit 4", state: "MA", code: "02601", phone: "(508) 790-7014" },
  { city: "Charlestown", province: null, street: "529 Main Street Powerhouse Bldg 2nd floor, Room 239", state: "MA", code: "02601", phone: "(508) 790-7014" },
  { city: "Orlando", province: "Windermere",  street: "9100 Conroy Windermere Rd", state: "FL", code: "02601", phone: "(508) 790-7014" },
]

const links = [
  { label: "About Us", url: "/about" },
  { label: "Services", url: "/services" },
  { label: "Contact Us", url: "/contact" },
  { label: "Client Portal", url: "https://talitacamilo.clientportal.com/#/login" },
  { label: "Privacy Policy", url: "/privacy-policy" },
]

const year = new Date().getFullYear();
---

<footer class="w-full bg-primary p-4 py-12">
  <div class="w-full max-w-screen-full mx-auto">
    <div class="flex flex-col gap-8">
      <div class="flex flex-col gap-8 sm:flex-row sm:justify-between sm:items-center">
        <a href="/" class="w-full max-w-[300px]">
          <svg class="w-full aspect-[150/29]">
            <use href="#footer-logo"></use>
          </svg>
        </a>

        <ul class="flex gap-4">
          {social.map((s) => (
            <li class="size-8">
              <a href={s.url} target="_blank" rel="noopener noreferrer" class="text-white size-8 transition-opacity hover:opacity-70">
                <svg class="size-8">
                  <use href={`#${s.label.toLocaleLowerCase()}`}></use>
                </svg>
                <span class="sr-only">
                  {s.label}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="flex flex-col gap-12 w-full sm:flex-row md:gap-24">
        {addresses.map((address) => (
          <div class="flex gap-5 text-white">
            <svg class="w-5 h-10">
              <use href="#location"></use>
            </svg>
              <div class="flex flex-col gap-2 w-full max-w-[260px]">
                <p class="text-xl tracking-wide uppercase border-b border-white pb-1 w-fit">
                  { address.city }
                </p>

                <div class="flex flex-col">
                  <p class="text-lg">{ address.street }</p>
                  <p class="text-lg">
                    { address.province ?? address.city }, { address.state } - { address.code }
                  </p>
                  
                  {address.phone ? (
                    <p>{address.phone}</p>
                  ) : null}
                </div>
              </div>
          </div>
        ))}
      </div>

      <nav id="footer-navigation" class="md:py-6">
        <ul class="flex flex-col gap-6 w-full sm:flex-row sm:justify-center sm:gap-0">
          {links.map((link) => (
            <li class="md:px-4">
              <a href={link.url} class="text-white text-lg font-light tracking-wide relative inline-block hover:opacity-80 hover:transition-all after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[1px] after:w-0 after:bg-white after:transition-all after:ease-in-out after:duration-300 hover:after:w-full lg:text-2xl">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="text-white text-center">
        <p>&copy; {year} TC Professional Services</p>
      </div>
    </div>
  </div>
</footer>
