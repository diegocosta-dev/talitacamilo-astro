---
const links = [
  { label: "Home", url: "/" },
  { label: "About Us", url: "/about" },
  { label: "Services", url: "/services" },
  { label: "Contact Us", url: "/contact" },
  { label: "Client Portal", url: "https://talitacamilo.clientportal.com/#/login" }
]
---

<header id="site-header">
  <div class="w-full relative">
    <div class="w-full flex flex-col items-center justify-center bg-primary p-4 md:py-6">
      <a href="/" class="w-full max-w-[140px] md:max-w-[200px] lg:max-w-[280px]">
        <svg class="w-full aspect-[140/93]">
          <use href="#nav-logo"></use>
        </svg>
      </a>
    </div>

    <div class="relative w-full flex flex-col justify-end items-end" x-data="siteHeader()" @click.outside="isOpenHamburger = false">
      <div class="w-fit p-2 flex justify-end relative z-40 md:hidden">
        <button id="hamburger-menu-button" @click="toggleHamburger()" class="hamburger" type="button" aria-label="Menu" :aria-expanded="isOpenHamburger" aria-expanded="false">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
          <span class="sr-only">Menu</span>
        </button>
      </div>
        <nav id="site-navigation" :class="isOpenHamburger ? 'active' : ''" class="">
          <ul class="flex flex-col gap-6 w-full relative md:w-fit md:mx-auto md:divide-x md:divide-primary md:flex-row md:justify-center md:gap-0" @click.outside="selectTab(0)">
            {links && links.map((link) => (
              <li class="md:px-4 group">
                <a href={link.url} class="text-primary text-xl font-light tracking-wide relative inline-block hover:opacity-60 hover:transition-all after:content-[''] after:absolute after:left-0 after:bottom-0 after:h-[1px] after:w-0 after:bg-primary after:transition-all after:ease-in-out after:duration-300 hover:after:w-full lg:text-2xl">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
    </div>
  </div>
</header>
